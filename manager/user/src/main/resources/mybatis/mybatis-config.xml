<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

	<settings>
		<!-- 开启结果集自动映射（"_"——>驼峰命名） -->
		<setting name="mapUnderscoreToCamelCase" value="true"/>
	</settings>

	<typeAliases>
		<typeAlias alias="user" type="com.wbq.user.po.UserPO"/>
		<typeAlias alias="role" type="com.wbq.user.po.RolePO"/>
		<typeAlias alias="user_role" type="com.wbq.user.po.UserRolePO"/>
		<typeAlias alias="menu" type="com.wbq.user.po.MenuPO"/>
		<typeAlias alias="role_menu" type="com.wbq.user.po.RoleMenuPO"/>
	</typeAliases>

	<typeHandlers>
		<!-- 所有枚举均使用EnumTypeHandler进行转化 -->
	</typeHandlers>

</configuration>